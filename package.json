{
    "name": "ironwing-tms",
    "version": "0.5.1",
    "description": "The TMS (Transportation Management System) Project is a modern, scalable, and high-performance logistics platform designed to streamline freight management, driver tracking, and job dispatching. Built with TypeScript, React (Electron for Desktop, React Native for Mobile), and Node.js, it ensures a unified development experience, leveraging a clean architecture for maintainability and scalability.",
    "private": true,
    "type": "module",
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "dev:backend": "npm run start:dev --workspace=apps/backend",
        "dev:desktop": "npm run dev --workspace=apps/desktop",
        "dev:mobile": "npm run start --workspace=apps/mobile",
        "build": "npm run build --workspaces",
        "lint": "eslint . --ext .js,.ts,.tsx",
        "lint:fix": "eslint . --ext .js,.ts,.tsx --fix",
        "format": "prettier --write .",
        "clean": "rm -rf dist",
        "test": "npm run test --workspaces --if-present",
        "test:e2e": "npm run kill-port && npm run test:e2e:setup && npm run start:servers & wait-on http://localhost:5173 && npx cypress run && npm run kill-port",
        "test:e2e:setup": "npm run db:seed:test --workspace=apps/backend",
        "start:servers": "NODE_ENV=development npm-run-all -p dev:backend dev:desktop",
        "kill-port": "lsof -t -i:5173 | xargs kill -9 || true"
    },
    "keywords": [],
    "dependencies": {
        "react": "^19.0.0",
        "react-dom": "^19.0.0"
    },
    "author": "Nick Kalas",
    "devDependencies": {
        "@babel/cli": "^7.25.9",
        "@babel/core": "^7.26.9",
        "@babel/generator": "^7.26.9",
        "@babel/plugin-transform-class-properties": "^7.25.9",
        "@babel/plugin-transform-nullish-coalescing-operator": "^7.26.6",
        "@babel/plugin-transform-optional-chaining": "^7.25.9",
        "@babel/preset-env": "^7.28.3",
        "@babel/template": "^7.26.9",
        "@babel/traverse": "^7.26.9",
        "@eslint/js": "^9.9.1",
        "@typescript-eslint/parser": "^8.46.0",
        "babel-jest": "^29.7.0",
        "babel-loader": "^9.2.1",
        "concurrently": "^9.1.2",
        "cypress": "^15.4.0",
        "eslint": "^9.21.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-import-resolver-node": "^0.3.9",
        "eslint-plugin-cypress": "^5.2.0",
        "eslint-plugin-prettier": "^5.2.1",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-security": "^3.0.1",
        "jest": "^29.7.0",
        "jest-mock-extended": "^4.0.0",
        "lint-staged": "^15.2.2",
        "npm-run-all": "^4.1.5",
        "prettier": "^3.3.3"
    },
    "overrides": {
        "react": "^19.0.0",
        "react-dom": "^19.0.0"
    }
}
